# =============================================================================
# Claude API Controller Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# Backend (FastAPI)
# =============================================================================

# Required: API key for authentication
CLAUDE_API_KEY=your-secret-api-key-here

# MongoDB Connection
MONGODB_URL=mongodb://claude_user:claude_pass_2024@localhost:27018/claude_api
MONGODB_DATABASE=claude_api

# Optional: Command timeout in seconds (default: 120)
CLAUDE_TIMEOUT=120

# Optional: Directory containing agent folders (default: ./CUSTOM_AGENTS)
AGENTS_DIR=./CUSTOM_AGENTS

# Server settings
HOST=127.0.0.1
PORT=8000

# CORS - Frontend URL
CORS_ORIGINS=["http://localhost:3000"]

# =============================================================================
# Frontend (Next.js)
# =============================================================================

NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_API_KEY=your-secret-api-key-here

# =============================================================================
# MongoDB Docker (see docker/docker-compose.yml)
# =============================================================================

# Note: These are preset in docker-compose.yml
# MONGO_INITDB_ROOT_USERNAME=claude_admin
# MONGO_INITDB_ROOT_PASSWORD=claude_secret_2024
# MONGO_INITDB_DATABASE=claude_api
# MongoDB port: 27018 (non-standard, localhost only)
