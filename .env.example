# Claude API Controller Configuration
# Copy this file to .env and fill in your values

# Required: API key for authentication
CLAUDE_API_KEY=your-secret-api-key-here

# Optional: Command timeout in seconds (default: 120)
CLAUDE_TIMEOUT=120

# Optional: Directory containing agent folders (default: ./CUSTOM_AGENTS)
# Each agent should have its own subdirectory here
AGENTS_DIR=./CUSTOM_AGENTS

# Optional: Server host (default: 127.0.0.1)
HOST=127.0.0.1

# Optional: Server port (default: 8000)
PORT=8000
